<h5>Hotels in {{model.[0].place}}</h5>
<div class="row">
    {{#each model as |hotel|}}
    <div class="col-sm-3">
        <div class="card" style="width: 18rem;">
            <div class="card-img-top" style="background-image: url(/images{{hotel.imageurl}})" alt="{{hotel.name}}">
            </div>
            <div class="card-body">
                <h5 class="card-title">{{hotel.name}}</h5>
                <p class="card-text">Rated <b>{{hotel.rating}}/5</b> by the trusted customers</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>